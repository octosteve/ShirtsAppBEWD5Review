<h1>Shirts App</h1>
<%= form_tag 'search', method: :get do %>
  <%= label_tag 'q', "Search" %>
  <%= text_field_tag 'q' %>
  <%= submit_tag %>
<% end %>

<%= link_to "Add new shirt", new_shirt_path %>
<% @shirts.each do |shirt| %>
  <h2><%= shirt.name %></h2>
  <p><%= shirt.description %></p>
  <%= image_tag shirt.image %>
<% end %>
